<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="1500"/>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/white"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:alpha="0"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent" />

        <Constraint
            android:id="@+id/red"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleX="2"
            android:scaleY="2"
            motion:layout_constraintBottom_toTopOf="@+id/white"
            motion:layout_constraintEnd_toStartOf="@+id/white" />

        <Constraint
            android:id="@+id/yellow"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleX="2"
            android:scaleY="2"
            motion:layout_constraintBottom_toTopOf="@+id/white"
            motion:layout_constraintStart_toEndOf="@+id/white" />

        <Constraint
            android:id="@+id/green"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleX="2"
            android:scaleY="2"
            motion:layout_constraintEnd_toStartOf="@+id/white"
            motion:layout_constraintTop_toBottomOf="@+id/white" />

        <Constraint
            android:id="@+id/blue"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleX="2"
            android:scaleY="2"
            motion:layout_constraintStart_toEndOf="@+id/white"
            motion:layout_constraintTop_toBottomOf="@+id/white" />

    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/white"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleY="2.5"
            android:scaleX="2.5"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent" />
        <Constraint
            android:id="@+id/red"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleX="1.5"
            android:scaleY="1.5"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintBottom_toTopOf="@+id/white"
            motion:layout_constraintEnd_toStartOf="@+id/white" />

        <Constraint
            android:id="@+id/yellow"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleX="1.5"
            android:scaleY="1.5"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintBottom_toTopOf="@+id/white"
            motion:layout_constraintStart_toEndOf="@+id/white" />

        <Constraint
            android:id="@+id/green"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleX="1.5"
            android:scaleY="1.5"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintEnd_toStartOf="@+id/white"
            motion:layout_constraintTop_toBottomOf="@+id/white" />

        <Constraint
            android:id="@+id/blue"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleX="1.5"
            android:scaleY="1.5"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintStart_toEndOf="@+id/white"
            motion:layout_constraintTop_toBottomOf="@+id/white" />

    </ConstraintSet>

</MotionScene>