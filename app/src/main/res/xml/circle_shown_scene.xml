<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/circle_shown_end1"
        motion:constraintSetStart="@+id/circle_shown_start1"
        motion:duration="500"
        motion:motionInterpolator="easeIn" />

    <Transition
        motion:constraintSetEnd="@+id/circle_shown_end2"
        motion:constraintSetStart="@+id/circle_shown_start2"
        motion:duration="500"
        motion:motionInterpolator="easeIn" />

    <ConstraintSet android:id="@+id/circle_shown_start1">
        <Constraint
            android:id="@+id/red"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:alpha="0"
            android:scaleX="0.5"
            android:scaleY="0.5"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintHorizontal_bias="0.2"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintVertical_bias="0.2"/>

        <Constraint
            android:id="@+id/yellow"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:alpha="0"
            android:scaleX="0.5"
            android:scaleY="0.5"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintHorizontal_bias="0.8"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintVertical_bias="0.2"/>

        <Constraint
            android:id="@+id/green"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:alpha="0"
            android:scaleX="0.5"
            android:scaleY="0.5"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintHorizontal_bias="0.2"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintVertical_bias="0.8"/>

        <Constraint
            android:id="@+id/blue"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:alpha="0"
            android:scaleX="0.5"
            android:scaleY="0.5"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintHorizontal_bias="0.8"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintVertical_bias="0.8"/>

        <Constraint
            android:id="@+id/white"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:alpha="0"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent" />

    </ConstraintSet>
    <ConstraintSet android:id="@+id/circle_shown_end1">
        <Constraint
            android:id="@+id/red"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:alpha="1"
            android:scaleX="1"
            android:scaleY="1"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintHorizontal_bias="0.2"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintVertical_bias="0.2" />
        <Constraint
            android:id="@+id/blue"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:alpha="1"
            android:scaleX="1"
            android:scaleY="1"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintHorizontal_bias="0.8"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintVertical_bias="0.8" />
        <Constraint
            android:id="@+id/yellow"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:alpha="1"
            android:scaleX="1"
            android:scaleY="1"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintHorizontal_bias="0.8"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintVertical_bias="0.2" />
        <Constraint
            android:id="@+id/green"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:alpha="1"
            android:scaleX="1"
            android:scaleY="1"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintHorizontal_bias="0.2"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintVertical_bias="0.8" />

        <Constraint
            android:id="@+id/white"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:alpha="0"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent" />
    </ConstraintSet>


    <ConstraintSet android:id="@+id/circle_shown_start2">
        <Constraint
            android:id="@+id/red"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:alpha="1"
            android:scaleX="1"
            android:scaleY="1"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintHorizontal_bias="0.2"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintVertical_bias="0.2" />

        <Constraint
            android:id="@+id/yellow"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:alpha="1"
            android:scaleX="1"
            android:scaleY="1"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintHorizontal_bias="0.8"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintVertical_bias="0.2" />

        <Constraint
            android:id="@+id/green"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:alpha="1"
            android:scaleX="1"
            android:scaleY="1"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintHorizontal_bias="0.2"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintVertical_bias="0.8"/>

        <Constraint
            android:id="@+id/blue"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:alpha="1"
            android:scaleX="1"
            android:scaleY="1"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintHorizontal_bias="0.8"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintVertical_bias="0.8" />

        <Constraint
            android:id="@+id/white"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:alpha="0"
            android:scaleX="1"
            android:scaleY="1"
            motion:layout_constraintTop_toBottomOf="@+id/red"
            motion:layout_constraintStart_toEndOf="@+id/red"
            motion:layout_constraintBottom_toTopOf="@+id/blue"
            motion:layout_constraintEnd_toStartOf="@+id/blue"/>

    </ConstraintSet>

    <ConstraintSet android:id="@+id/circle_shown_end2">
        <Constraint
            android:id="@+id/red"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:alpha="1"
            android:scaleX="0.8"
            android:scaleY="0.8"
            motion:layout_constraintBottom_toTopOf="@+id/white"
            motion:layout_constraintEnd_toStartOf="@+id/white" />

        <Constraint
            android:id="@+id/yellow"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:alpha="1"
            android:scaleX="0.8"
            android:scaleY="0.8"
            motion:layout_constraintBottom_toTopOf="@+id/white"
            motion:layout_constraintStart_toEndOf="@+id/white" />

        <Constraint
            android:id="@+id/green"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:alpha="1"
            android:scaleX="0.8"
            android:scaleY="0.8"
            motion:layout_constraintEnd_toStartOf="@+id/white"
            motion:layout_constraintTop_toBottomOf="@+id/white" />

        <Constraint
            android:id="@+id/blue"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:alpha="1"
            android:scaleX="0.8"
            android:scaleY="0.8"
            motion:layout_constraintStart_toEndOf="@+id/white"
            motion:layout_constraintTop_toBottomOf="@+id/white" />

        <Constraint
            android:id="@+id/white"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:alpha="1"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintBottom_toBottomOf="parent"/>
    </ConstraintSet>

</MotionScene>